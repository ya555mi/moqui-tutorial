<?xml version="1.0" encoding="UTF-8"?>

<!-- General Guideline Verbs: GET=find, POST=create, PUT=store (create or update), PATCH=update, DELETE=delete  -->

<resource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="file:///home/yamini/sand-box/moqui-framework/framework/xsd/rest-api-2.1.xsd"
          xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/rest-api-2.1.xsd"
          name="tutorial" displayName="Moqui-tutorial REST API" version="2.0.0" require-authentication="anonymous-all">

    <resource name="orders">
        <method type="post"><service name="tutorial.order.OrderServices.create#CreateOrder"/></method>
        <id name="orderId">
            <method type="get"><service name="tutorial.order.OrderServices.get#OrderDisplayInfo"/></method>
            <method type="put"><service name="tutorial.order.OrderServices.store#UpdateOrder"/></method>
        </id>
        <method type="get"><service name="tutorial.order.OrderServices.get#OrderDetails"/></method>
    </resource>
    <resource name="items">
        <method type="post"><service name="tutorial.order.OrderServices.create#CreateOrderPart"/></method>
    </resource>
</resource>

